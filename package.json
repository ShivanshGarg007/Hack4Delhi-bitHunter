{
  "name": "bithunter",
  "version": "1.0.0",
  "description": "Public Integrity Platform - bitHunter",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\" --names \"BACKEND,FRONTEND\" --prefix \"[{name}]\" --colors \"blue,green\"",
    "dev:backend": "cd backend && ./venv/bin/python -m uvicorn server:app --host 0.0.0.0 --port 8000 --reload",
    "dev:frontend": "cd frontend && npm start",
    "start:backend": "cd backend && ./venv/bin/python -m uvicorn server:app --host 0.0.0.0 --port 8000",
    "start:frontend": "cd frontend && npm start",
    "build:frontend": "cd frontend && npm run build",
    "test": "cd backend && ./venv/bin/python -m pytest"
  },
  "devDependencies": {
    "concurrently": "^8.2.1"
  }
}
